# DHL Login Service Environment Configuration
# Copy this file to .env and replace the placeholder values with your actual configuration

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the dhl_login service to run on
# Default: 3000
PORT=3000

# Node environment (development, test, production)
# Default: development
NODE_ENV=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session secret for Express sessions
# IMPORTANT: Use a strong, random string for production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=session_secret_here

# JWT secret for token signing and verification
# IMPORTANT: Must match the JWT_SECRET in backend/.env
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#JWT_SECRET=h9u7gQFzWAKrYXs6MEiTpVvdaBqPb4jH2tNc1omJZCxkLORUGy5n8w3le0HsBIDM

# CORS allowed origins for API endpoints (comma-separated list)
# Development: http://localhost:3001 (backend service)
# Production: Add your production backend URLs
# Examples:
#   Single origin: http://localhost:3001
#   Multiple origins: http://localhost:3001,https://api.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3001

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Backend API URL for frontend configuration
# This URL is provided to the frontend via /api/config endpoint
# Development: http://localhost:3001
# Production: https://dot1hundred.com/api (via nginx proxy)
BACKEND_API_URL=http://localhost:3001

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Supervisor email address for receiving checklist notifications
# This email will receive all submitted checklists for validation
# Should match the SUPERVISOR_EMAIL in backend/.env
SUPERVISOR_EMAIL=sendral.ts.1@pg.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database path (relative to dhl_login directory)
# Default: data/auth.db
# Uncomment and modify if you want to use a different path
# DB_PATH=data/auth.db

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug logging (true/false)
# Default: false
# DEBUG=false

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production deployment:
# 1. Set NODE_ENV=production
# 2. Use strong, unique secrets for SESSION_SECRET and JWT_SECRET
# 3. Ensure JWT_SECRET matches the one in backend/.env
# 4. Consider using absolute paths for DB_PATH
# 5. Enable HTTPS and set secure cookie options

