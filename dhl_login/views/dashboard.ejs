<div class="dashboard-container">
  <header class="dashboard-header">
    <!--<img src="/dhl-logo.svg" alt="DHL Logo" class="logo">--> <!-- Assuming /dhl-logo.svg is the correct path from your public assets -->
    <h1>Welcome, <%= user.username %>!</h1>
  </header>

  <section class="main-content">
    <h2>Actions</h2>
    <ul class="action-list">
      <li><a href="/app/index.html" class="btn btn-primary btn-inline">Start Checklists</a></li>
